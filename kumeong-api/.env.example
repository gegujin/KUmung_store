# ───────── server ─────────
NODE_ENV=
PORT=3000
API_PREFIX=/api
API_VERSION=1

# ───────── CORS ─────────
# 예: /^http:\/\/localhost(?::\d+)?$/, /^http:\/\/127\.0\.0\.1(?::\d+)?$/
CORS_ORIGIN=

# ───────── JWT ─────────
JWT_SECRET=
JWT_EXPIRES=7d
BCRYPT_SALT_ROUNDS=10

# ───────── mail (SMTP) ─────────
SMTP_HOST=
SMTP_PORT=
SMTP_SECURE=
SMTP_USER=
SMTP_PASS=
MAIL_FROM="KU멍가게 <no-reply@example.com>"

# ───────── university verification ─────────
UNIV_VERIFY_CODE_TTL_SEC=180      # 3분
UNIV_VERIFY_COOLDOWN_SEC=60
UNIV_VERIFY_FROM="KU멍가게 인증 <no-reply@example.com>"

# ───────── DB ─────────
# mysql 또는 sqlite 중 택1
DB_KIND=mysql

# (mysql일 때)
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=your_user
DB_PASSWORD=your_password
DB_DATABASE=kumeong_store          # 코드가 DB_NAME도 함께 지원함
# DB_NAME=kumeong_store

# (sqlite일 때)
# DB_SQLITE_PATH=./data/kumeong.sqlite

# 공통 옵션
DB_SYNC=true
DB_DROP_SCHEMA=false
DB_LOGGING=true
DB_TIMEZONE=+09:00
DB_CHARSET=utf8mb4
